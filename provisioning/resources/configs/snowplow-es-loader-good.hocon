# This file (config.hocon.sample) contains a template with
# configuration options for the Elasticsearch Loader.

source = nsq

sink {
  good = elasticsearch
  bad = nsq
}

enabled = good

aws {
  accessKey = ""
  secretKey = ""
}

nsq {
  channelName = ESLoaderChannelGood
  host = nsqlookupd
  port = 4150
  lookupPort = 4161
}

kinesis {
  initialPosition = TRIM_HORIZON
  maxRecords = 1000
  region = ""
  appName = ""
}

streams {
  inStreamName = EnrichedEvents
  outStreamName = BadElasticsearchEvents
  buffer {
    byteLimit: 5242880
    recordLimit: 1
    timeLimit: 60000
  }
}

elasticsearch {

  client {
    endpoint = elasticsearch
    port = 9200
    maxTimeout = 10000
    ssl = false
  }

  aws {
    signing = false
    region = ""
  }

  cluster {
    name = "elasticsearch"
    index = "good"
    clusterType = "good"
  }
}
